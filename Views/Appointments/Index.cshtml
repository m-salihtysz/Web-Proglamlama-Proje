@model IEnumerable<FitnessCenter.Web.Models.Appointment>
@{
    ViewData["Title"] = "Randevular";
    var isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@(isAdmin ? "Tüm Randevular" : "Randevularım")</h2>
    @if (!isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">Yeni Randevu Al</a>
    }
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Spor Salonu</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    @if (isAdmin)
                    {
                        <th>Üye</th>
                    }
                    <th>Fiyat</th>
                    <th>Süre</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                        <td>@(appointment.Gym?.Name ?? "Yok")</td>
                        <td>@(appointment.Trainer?.FullName ?? "Yok")</td>
                        <td>@(appointment.Service?.Name ?? "Yok")</td>
                        @if (isAdmin)
                        {
                            <td>@(appointment.Member != null ? $"{appointment.Member.FirstName} {appointment.Member.LastName}" : "Yok")</td>
                        }
                        <td>@appointment.Price.ToString("C")</td>
                        <td>@appointment.DurationMinutes dakika</td>
                        <td>
                            <span class="badge @(appointment.Status switch {
                                AppointmentStatus.Approved => "bg-success",
                                AppointmentStatus.Pending => "bg-warning",
                                AppointmentStatus.Rejected => "bg-danger",
                                AppointmentStatus.Cancelled => "bg-secondary",
                                AppointmentStatus.Completed => "bg-info",
                                _ => "bg-secondary"
                            })">
                                @(appointment.Status switch {
                                    AppointmentStatus.Approved => "Onaylandı",
                                    AppointmentStatus.Pending => "Beklemede",
                                    AppointmentStatus.Rejected => "Reddedildi",
                                    AppointmentStatus.Cancelled => "İptal Edildi",
                                    AppointmentStatus.Completed => "Tamamlandı",
                                    _ => appointment.Status.ToString()
                                })
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">Detaylar</a>
                                @if (isAdmin && appointment.Status == AppointmentStatus.Pending)
                                {
                                    <a asp-action="Approve" asp-route-id="@appointment.Id" class="btn btn-sm btn-success">Onayla</a>
                                    <a asp-action="Reject" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">Reddet</a>
                                }
                                @if (!isAdmin && appointment.Status != AppointmentStatus.Cancelled && appointment.Status != AppointmentStatus.Completed)
                                {
                                    <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">İptal Et</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Randevu bulunamadı</h4>
        <p>@(isAdmin ? "Sistemde henüz randevu bulunmuyor." : "Henüz randevunuz bulunmuyor.")</p>
        @if (!isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">İlk Randevunuzu Alın</a>
        }
    </div>
}
