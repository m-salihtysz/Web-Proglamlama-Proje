@model FitnessCenter.Web.ViewModels.GymViewModel
@{
    ViewData["Title"] = "Spor Salonu Düzenle";
}

<h2>Spor Salonu Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WorkingHours" class="form-label"></label>
                <input asp-for="WorkingHours" class="form-control" placeholder="Örn: Pazartesi-Cuma: 06:00-22:00, Cumartesi-Pazar: 08:00-20:00" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

