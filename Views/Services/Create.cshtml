@model FitnessCenter.Web.ViewModels.ServiceViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h2>Yeni Hizmet Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Örn: Fitness, Yoga, Pilates, Personal Training..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GymId" class="form-label"></label>
                <select asp-for="GymId" asp-items="ViewBag.GymId" class="form-select">
                    <option value="">-- Spor Salonu Seçin --</option>
                </select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Hizmet hakkında detaylı açıklama..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DurationMinutes" class="form-label"></label>
                    <input asp-for="DurationMinutes" class="form-control" type="number" min="1" max="600" />
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" max="10000" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

